<launch>
	<arg name="model" default="$(find allegro_hand_urdf)/AllegroHand_Left.urdf"/>
	<arg name="gui" default="True" />
	<param name="robot_description" textfile="$(arg model)" />
	<param name="use_gui" value="$(arg gui)"/>
	
	
	
	<node name="allegro_hand" pkg="allegro_hand" type="allegro_hand" >
		<remap from="/allegro/joint_cmd" to="joint_states"/>
	</node>
	
	<!--
	<node name="keyboard" pkg="allegro_hand_keyboard" type="allegro_hand_keyboard" ></node>
    -->
    
    <node name="joint_gui" pkg="joint_state_gui" type="joint_state_publisher" ></node>
	<node name="jointState2tf" pkg="robot_state_publisher" type="state_publisher"/>
    <node name="rviz" pkg="rviz" type="rviz" args="-d $(find AllegroHand_urdf)/urdf.vcg" />
	
</launch>
