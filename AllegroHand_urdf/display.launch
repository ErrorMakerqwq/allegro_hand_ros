<launch>
	<arg name="model" default="AllegroHand_Left.urdf"/>
	<arg name="gui" default="True" />
	<param name="robot_description" textfile="$(arg model)" />
	<param name="use_gui" value="$(arg gui)"/>

	<node name="joint_state_publisher" pkg="joint_state_publisher_experimental" type="joint_state_publisher" ></node>
	<node name="robot_tf_publisher" pkg="robot_state_publisher" type="state_publisher" />
	<node name="rviz" pkg="rviz" type="rviz" args="-d $(find AllegroHand_urdf)/urdf.vcg" />
</launch>
